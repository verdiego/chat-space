.message-zone__message
  .message-zone__message__member
    %span
      = message.user.name
  .message-zone__message__date
    %span
      = message.created_at.strftime("%Y年%m月%d日 %H:%M:%S")
  .message-zone__message__text
    - if message.content.present?
      %p
        = message.content
    %p
      = image_tag message.image.url, class: '.message-zone__message__text' if message.image.present?
