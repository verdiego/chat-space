.log-bar
  %p チャットグループが作成されました
.contents
  .side-bar
    .user-zone
      .user
        %span sample user
        = link_to "#" do
          %i.fa.fa-cog
        = link_to "#" do
          %i.fa.fa-pencil-square-o
    .side-bar__gruop-zone
      - for i in 1..20
        = render partial: "side-bar__group"
  .chat-zone
    .chat-zone__group
      .chat-zone__group__name
        %span SAMPLEグループ
      %a.chat-zone__group__button{:href => "#"}
        %span Edit
      .chat-zone__group__member
        %span Member:
        %span メンバー
    .mesasge-zone
      - for i in 1..10
        = render partial: "message-zone__message"
    .send-message-zone
      %input.send-message-zone__input{:placeholder => "type a message", :type => "text"}
      = link_to "#" do
        %i.fa.fa-photo
      %a.send-message-zone__button{:href => "#"}
        %span Send
